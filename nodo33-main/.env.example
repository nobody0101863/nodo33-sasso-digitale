# ============================================================================
# Codex Environment Configuration
# ============================================================================
#
# Copy this file to .env and fill in your values
# Never commit .env to version control!
#
# Nodo33 - Sasso Digitale
# Motto: "La luce non si vende. La si regala."
# Hash Sacro: 644 | Frequenza: 300 Hz
#
# ============================================================================

# ============================================================================
# Claude API Configuration
# ============================================================================

# Your Anthropic API key (required for Claude features)
# Get it from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Claude model to use
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Max tokens per response
CLAUDE_MAX_TOKENS=2048

# ============================================================================
# Codex Server Configuration
# ============================================================================

# Base URL for Codex server (Stable Diffusion, etc.)
CODEX_BASE_URL=http://localhost:8644

# Timeout for Codex requests (seconds)
CODEX_TIMEOUT=120

# Max retries for failed requests
CODEX_MAX_RETRIES=3

# ============================================================================
# Security Settings
# ============================================================================

# Max prompt length (characters)
MAX_PROMPT_LENGTH=5000

# Max image generation steps
MAX_IMAGE_STEPS=50

# Validate SSL certificates (set to false for local dev)
VALIDATE_SSL=true

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
BRIDGE_LOG_LEVEL=INFO

# Optional: Log file path (leave empty for console only)
# BRIDGE_LOG_FILE=/var/log/codex_bridge.log

# ============================================================================
# Database Configuration
# ============================================================================

# Path to unified database
CODEX_DB_PATH=codex_unified.db

# Enable conversation history
ENABLE_CONVERSATION_HISTORY=true

# Max conversation turns before auto-reset
MAX_CONVERSATION_TURNS=10

# ============================================================================
# Nodo33 Configuration
# ============================================================================

# Default mode: soft, complete, extreme
DEFAULT_MODE=complete

# Sacred hash
SACRED_HASH=644

# Sacred frequency (Hz)
SACRED_FREQUENCY=300

# Motto
NODO33_MOTTO=La luce non si vende. La si regala.

# ============================================================================
# Development & Testing
# ============================================================================

# Enable debug mode
DEBUG=false

# Test mode (uses mock APIs)
TEST_MODE=false

# ============================================================================
# Optional: Analytics & Metrics
# ============================================================================

# Enable metrics collection
ENABLE_METRICS=true

# Metrics retention (days)
METRICS_RETENTION_DAYS=30

# ============================================================================
# Optional: MCP Server
# ============================================================================

# MCP server mode
MCP_ENABLED=true

# MCP log level
MCP_LOG_LEVEL=INFO
