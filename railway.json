{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "uvicorn codex_server:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  },
  "variables": {
    "FASTAPI_ENV": {
      "description": "FastAPI environment (production or development)",
      "value": "production"
    },
    "LOG_LEVEL": {
      "description": "Logging level (debug, info, warning, error)",
      "value": "info"
    },
    "PORT": {
      "description": "Application port",
      "value": "8644"
    }
  }
}
